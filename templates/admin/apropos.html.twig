{% extends 'baseAdmin.html.twig' %}

{% block title %} - A PROPOS{% endblock %}

{% block body %}

    <section >
      <h2> A PROPOS</h2>
   
      <table class="table text-center table-hover table-sm">
        <thead>
            <tr>
                <th>DESCRIPTION</th>
            </tr>
        </thead>
        <tbody>
            {% for apropo in apropos|reverse %}
                <tr>
                    <td class="align-middle">{{ apropo.description }}</td>
                   
                    <td class="align-middle">
                        <a href="{{ path('apropos_update', {'id': apropo.id}) }}" class="btn btn-primary m-2">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-end my-5">
        <a href="{{ path('apropos_create' ) }}" class="btn btn-success {% if apropos|length >= 1 %}disabled{% endif %}">Ajouter une description</a>
    </div>

{% endblock %}